{
  "extends": "aegir/src/config/tsconfig.aegir.json",
  "compilerOptions": {
    "incremental": true,
    "emitDeclarationOnly": false,
    "module": "ES2020",
    "target": "ES2020",
    "typeRoots": [
      "./types",
      "./node_modules/@types",
    ],
    "importsNotUsedAsValues": "preserve",
    "noEmitOnError": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "references": [
    {
      "path": "./src",
    },
    {
      "path": "./test",
    },
    {
      "path": "./tsconfig.generated.json",
    },
  ],
  "include": ["src"],
  "exclude": [
    "generated",
    "src"
  ],
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "emit": false,
    "compiler": "typescript",
    "compilerHost": false,
    "compilerOptions": {
      "module": "ES2020",
      "target": "ES2020"
    },
    "preferTsExts": true,
    "pretty": true,
    "swc": true
  }
}
