{
  "extends": "aegir/src/config/tsconfig.aegir.json",
  "compilerOptions": {
    "outDir": "dist",
    "typeRoots": [
      "./types",
      "./node_modules/@types",
      "dist/dist.generated"
    ],
    "strictNullChecks": true
  },
  "include": [
    "src",
    "test/**/*.ts",
    "types/**/*.d.ts",
    "dist/dist.generated"
  ],
  "exclude": [
    "generated",
    "dist.test",
  ],
}
